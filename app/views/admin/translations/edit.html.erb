<%= semantic_form_for [:admin, entry], as: :entry, url: admin_translations_update_path do |f| %>
  <%= f.inputs name: "Translations for #{entry.key}" do %>
    <%= f.input :key, as: :hidden %>
    <%= f.input :en_value, as: :text, label: 'English text', input_html: {rows: 4} %>
    <%= f.input :id_value, as: :text, label: 'Indonesian text', input_html: {rows: 4} %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: 'Save' %>
    <%= f.action :cancel, label: 'Cancel', wrapper_html: {class: 'cancel'}, url: admin_translations_path %>
  <% end %>
<% end %>
